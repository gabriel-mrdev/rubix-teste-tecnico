FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy source code
COPY . .

# Build TypeScript
RUN npm run build

# Create database directory
RUN mkdir -p src/database

# Initialize database
RUN npm run init-db

EXPOSE 3001

CMD ["npm", "start"]
